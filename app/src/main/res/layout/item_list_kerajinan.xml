<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="16dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_Result_List"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            tools:src="@tools:sample/avatars"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Result_List"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="-0.05"
            android:text="@string/lampion_plastik"
            android:textAllCaps="true"
            app:layout_constraintStart_toEndOf="@id/img_Result_List"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_desc_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:letterSpacing="-0.05"
            android:textSize="12sp"
            android:text="@string/plastik_sendok"
            app:layout_constraintStart_toEndOf="@id/img_Result_List"
            app:layout_constraintTop_toBottomOf="@id/tv_Result_List"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>